#include <stdio.h>

int main() {
    int score = 0;
    int answer;

    printf("Welcome to the Quiz!\n\n");

    // Question 1
    printf("1. What is the capital of India?\n");
    printf("   1. Mumbai\n");
    printf("   2. Delhi\n");
    printf("   3. Bangalore\n");
    printf("   4. Kolkata\n");
    printf("Enter your answer (1-4): ");
    scanf("%d", &answer);
    if (answer == 2) {
        printf("Correct!\n");
        score++;
    } else {
        printf("Wrong! The correct answer is 2. Delhi.\n");
    }

    printf("\n");

    // Question 2
    printf("2. Who is known as the Father of the Nation in India?\n");
    printf("   1. Jawaharlal Nehru\n");
    printf("   2. Mahatma Gandhi\n");
    printf("   3. Subhash Chandra Bose\n");
    printf("   4. Dr. B.R. Ambedkar\n");
    printf("Enter your answer (1-4): ");
    scanf("%d", &answer);
    if (answer == 2) {
        printf("Correct!\n");
        score++;
    } else {
        printf("Wrong! The correct answer is 2. Mahatma Gandhi.\n");
    }

    printf("\n");

    // Question 3t
    printf("3. What is the national animal of India?\n");
    printf("   1. Tiger\n");
    printf("   2. Elephant\n");
    printf("   3. Peacock\n");
    printf("   4. Lion\n");
    printf("Enter your answer (1-4): ");
    scanf("%d", &answer);
    if (answer == 1) {
        printf("Correct!\n");
        score++;
    } else {
        printf("Wrong! The correct answer is 1. Tiger.\n");
    }
    printf("\n");
    printf("Quiz Over!\n");
    printf("Your final score is: %d out of 3\n", score);

    // Feedback based on score
    if (score == 3) {
        printf("Excellent! You got all questions right.\n");
    } else if (score == 2) {
        printf("Good job! You missed one.\n");
    } else if (score == 1) {
        printf("You can do better! Keep trying.\n");
    } else {
        printf("Better luck next time!\n");
    }

    return 0;
}
